    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'merge-and-split'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=merge-and-split",
                    "--package=merge-and-split"
                ],
                "filter": {
                    "name": "merge-and-split",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "DYLD_FALLBACK_LIBRARY_PATH": "${userHome}/.rustup/toolchains/nightly-x86_64-apple-darwin/lib",
                "CARGO_MANIFEST_DIR": "${workspaceFolder}"
            }
        },
